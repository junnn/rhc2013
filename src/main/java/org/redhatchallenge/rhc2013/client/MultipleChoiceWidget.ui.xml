<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <g:HTMLPanel>
        <table>
            <tr><g:Label ui:field="questionLabel"/></tr>
            <tr>
                <td><g:CheckBox ui:field="firstChoice"/></td>
                <td><g:Label ui:field="firstChoiceLabel"/></td>
            </tr>
            <tr>
                <td><g:CheckBox ui:field="secondChoice"/></td>
                <td><g:Label ui:field="secondChoiceLabel"/></td>
            </tr>
            <tr>
                <td><g:CheckBox ui:field="thirdChoice"/></td>
                <td><g:Label ui:field="thirdChoiceLabel"/></td>
            </tr>
            <tr>
                <td><g:CheckBox ui:field="fourthChoice"/></td>
                <td><g:Label ui:field="fourthChoiceLabel"/></td>
            </tr>
        </table>
    </g:HTMLPanel>
</ui:UiBinder>